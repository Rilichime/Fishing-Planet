      color: white;
      border: none;
      cursor: pointer;
    }

    .info-panel .close-button:hover {
      background-color: #353746;
    }

    /* Overlay for the panel */
    .overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 999;
    }

    /* Toggle button styles */
    .toggle-button {
      margin: 20px auto;
      display: block;
      padding: 10px 20px;
      background-color: #48495B;
      color: white;
      border: none;
      cursor: pointer;
