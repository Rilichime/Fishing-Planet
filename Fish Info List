      margin: 0 auto;
    }

    .box {
      position: relative;
      border: 1px solid #ccc;
      background-color: #48495B;
      width: 200px;
      height: 120px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      box-sizing: border-box;
      cursor: pointer;
      font-family: verdana, sans-serif;
    }

    .box img {
      max-width: 100%;
      max-height: 60%;
    }

    .top-left-text {
      position: absolute;
      top: 4px;
      left: 4px;
      font-size: 14px;
      color: white;
      font-family: verdana, sans-serif;
    }

    .bottom-right-text {
      position: absolute;
      bottom: 2px;
      right: 4px;
      font-size: 14px;
      color: white;
      font-family: verdana, sans-serif;
    }

    /* Info panel styles */
    .info-panel {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 300px;
