<body>

<button class="toggle-button" onclick="toggleUnits()">Switch to Imperial</button>

<div class="inventory-container">
  <!-- Inventory items generated by JavaScript -->
</div>

<div class="overlay"></div>
<div class="info-panel">
  <div class="content" id="info-panel-content">
    <!-- Dynamic HTML content will be injected here -->
  </div>
  <button class="close-button" onclick="closeInfoPanel()">Close</button>
</div>

<script>
  let isMetric = true;

  const inventoryData = [    
    
    {
      smallItems: [
        { 
          text: 'Fish', 
          image: 'https://wiki.fishingplanet.com/images/thumb/8/88/American_Gizzard_Shad.png/300px-American_Gizzard_Shad.png', 
          combinedText: `<span style='color: white;'>Common</span>, <span style='color: #93c47d;'>Trophy</span>, <span style='color: orange;'>Unique</span>`,
          infoMetric: `
<img src="https://cdn-icons-png.flaticon.com/128/4003/4003667.png" alt="Text" style="width:20px;height:20px;"> [-11, 428]<br>
<img src="https://cdn-icons-png.flaticon.com/128/782/782333.png" alt="Text" style="width:20px;height:20px;"> Float Rod<br>
<img src="https://cdn-icons-png.flaticon.com/128/3298/3298615.png" alt="Text" style="width:20px;height:20px;"> 50cm Depth<br>
<img src="https://cdn-icons-png.flaticon.com/128/4294/4294216.png" alt="Text" style="width:20px;height:20px;"> #6-1 Hook<br>
<img src="https://cdn-icons-png.flaticon.com/128/1833/1833959.png" alt="Text" style="width:20px;height:20px;"> Bloodworms, Pinkies<br><br>
<img src="https://cdn-icons-png.flaticon.com/128/2280/2280557.png" alt="Text" Style="width:20px;height:20px;"> Took a while to catch.
          `,
          infoImperial: `
<img src="https://cdn-icons-png.flaticon.com/128/4003/4003667.png" alt="Text" style="width:20px;height:20px;"> [-11, 428]<br>
<img src="https://cdn-icons-png.flaticon.com/128/782/782333.png" alt="Text" style="width:20px;height:20px;"> Float Rod<br>
<img src="https://cdn-icons-png.flaticon.com/128/3298/3298615.png" alt="Text" style="width:20px;height:20px;"> 20" Depth<br>
<img src="https://cdn-icons-png.flaticon.com/128/4294/4294216.png" alt="Text" style="width:20px;height:20px;"> #6-1 Hook<br>
<img src="https://cdn-icons-png.flaticon.com/128/1833/1833959.png" alt="Text" style="width:20px;height:20px;"> Bloodworms, Pinkies<br><br>
<img src="https://cdn-icons-png.flaticon.com/128/2280/2280557.png" alt="Text" Style="width:20px;height:20px;"> Took a while to catch.
          `
        }
      ]
    }
    
    
    
    
  ];

  function generateInventory() {
    const container = document.querySelector('.inventory-container');

    inventoryData.forEach(data => {
      data.smallItems.forEach(item => {
        const smallBox = createSmallBox(item);
        container.appendChild(smallBox);
      });
    });
  }

  function createSmallBox(item) {
    const smallBox = document.createElement('div');
    smallBox.classList.add('box');
    smallBox.innerHTML = `
      <img src="${item.image}" alt="Item">
      <div class="top-left-text">${item.text}</div>
      <div class="bottom-right-text">${item.combinedText}</div>
    `;

    // Add click event to open the info panel
    smallBox.addEventListener('click', () => openInfoPanel(item));

    return smallBox;
  }

  function toggleUnits() {
    isMetric = !isMetric;
    const toggleButton = document.querySelector('.toggle-button');
    toggleButton.textContent = isMetric ? "Switch to Imperial" : "Switch to Metric";
  }

  function openInfoPanel(item) {
    const overlay = document.querySelector('.overlay');
    const infoPanelContent = document.getElementById('info-panel-content');

    // Inject HTML content into the popup
    infoPanelContent.innerHTML = isMetric ? item.infoMetric : item.infoImperial;

    // Display the overlay and the popup
    overlay.style.display = 'block';
    document.querySelector('.info-panel').style.display = 'block';
  }

  function closeInfoPanel() {
    const overlay = document.querySelector('.overlay');
    const infoPanel = document.querySelector('.info-panel');

    overlay.style.display = 'none';
    infoPanel.style.display = 'none';
  }

  // Initialize inventory
  generateInventory();
</script>

</body>
</html>
