<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    .inventory-container {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      justify-content: flex-start;
      align-items: flex-start;
      width: 100%;
      max-width: 940px;
      margin: 0 auto;
    }

    .box {
      position: relative;
      border: 1px solid #ccc;
      background-color: #48495B;
      box-sizing: border-box;
    }

    .small-box {
      width: 100px;
      height: 100px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      position: relative;
    }

    .box img {
      max-width: 100%;
      max-height: 60%;
    }

    .top-left-text {
      position: absolute;
      top: 4px;
      left: 4px;
      font-size: 14px;
      color: white;
      font-family: helvetica, sans-serif;
    }

    .bottom-right-text {
      position: absolute;
      bottom: 2px;
      right: 4px;
      font-size: 10px;
      color: white;
      font-family: helvetica, sans-serif;
    }

    .tooltip {
      position: absolute;
      bottom: 80%;
      left: 50%;
      transform: translateX(-50%);
      background-color: rgba(0, 0, 0, 0.7);
      color: #fff;
      font-size: 12px;
      padding: 5px;
      border-radius: 5px;
      visibility: hidden;
      opacity: 0;
      transition: opacity 0.2s ease-in-out;
      white-space: nowrap;
      z-index: 10;
    }

    .tooltip-icon {
      position: absolute;
      top: 4px;
      right: 4px;
      width: 18px;
      height: 18px;
      cursor: pointer;
    }

    .tooltip-icon:hover + .tooltip {
      visibility: visible;
      opacity: 1;
    }

    .toggle-button {
      margin: 20px auto;
      display: block;
      padding: 10px 20px;
      background-color: #48495B;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 16px;
    }

    .toggle-button:hover {
      background-color: #353746;
    }
  </style>
</head>
<body>

<button class="toggle-button" onclick="toggleUnits()">Switch to Imperial</button>

<div class="inventory-container">
  <!-- Inventory items generated by JavaScript -->
</div>

<script>
  let isMetric = true;

const inventoryData = [
  {
    smallItems: [
      {
        text: '★1',
        image: 'https://wiki.fishingplanet.com/images/thumb/1/11/Red_Worms.png/160px-Red_Worms.png',
        textImperial: 'Red Worms',
        textMetric: 'Red Worms',
      },
      {
        text: '★12',
        image: 'https://wiki.fishingplanet.com/images/thumb/8/89/Bloodworms.png/160px-Bloodworms.png',
        textImperial: 'Bloodworms',
        textMetric: 'Bloodworms',
      },
      {
        text: '★7',
        image: 'https://wiki.fishingplanet.com/images/thumb/5/5a/Small_Minnows.png/160px-Small_Minnows.png',
        textImperial: 'Small Minnows',
        textMetric: 'Small Minnows',
      },
      {
        text: '★31',
        image: 'https://wiki.fishingplanet.com/images/thumb/b/bc/Large_Minnows1.png/160px-Large_Minnows1.png',
        textImperial: 'Large Minnow',
        textMetric: 'Large Minnow',
        tooltip: 'Optional but recommended if high enough level.<br> Use Small Minnows or Shiners if not.'
      },
      {
        text: '★16',
        image: 'https://wiki.fishingplanet.com/images/thumb/b/b0/Shiners.png/160px-Shiners.png',
        textImperial: 'Shiners',
        textMetric: 'Shiners',
      },


    ]
  }
];


  function generateInventory() {
    const container = document.querySelector('.inventory-container');

    inventoryData.forEach(data => {
      data.smallItems.forEach(item => {
        const smallBox = createSmallBox(item);
        container.appendChild(smallBox);
      });
    });
  }

  function createSmallBox(item) {
    const smallBox = document.createElement('div');
    smallBox.classList.add('box', 'small-box');
    smallBox.innerHTML = `
      <img src="${item.image}" alt="Item">
      <div class="top-left-text">${item.text}</div>
      <div class="bottom-right-text" data-metric="${item.textMetric}" data-imperial="${item.textImperial}">
        ${item.textMetric}
      </div>
      ${
        item.tooltip
          ? `<img src="https://cdn-icons-png.flaticon.com/128/5978/5978223.png" alt="Tooltip Icon" class="tooltip-icon">
             <div class="tooltip">${item.tooltip}</div>`
          : ''
      }
    `;
    return smallBox;
  }

  function toggleUnits() {
    isMetric = !isMetric;
    const toggleButton = document.querySelector('.toggle-button');
    toggleButton.textContent = isMetric ? "Switch to Imperial" : "Switch to Metric";

    const bottomRightTexts = document.querySelectorAll('.bottom-right-text');
    bottomRightTexts.forEach(el => {
      el.textContent = isMetric ? el.getAttribute('data-metric') : el.getAttribute('data-imperial');
    });
  }

  generateInventory();
</script>

</body>
</html>
