<script>
  let isMetric = true;

  function toggleUnits() {
    isMetric = !isMetric;
    const toggleButton = document.querySelector('.toggle-button');
    toggleButton.textContent = isMetric ? "Switch to Imperial" : "Switch to Metric";

    // Update all bottom-right text based on unit system
    const bottomRightTexts = document.querySelectorAll('.bottom-right-text');
    bottomRightTexts.forEach(el => {
      const metricText = el.getAttribute('data-metric');
      const imperialText = el.getAttribute('data-imperial');
      el.textContent = isMetric ? metricText : imperialText;
    });

    // Update all long box tooltips based on unit system
    const longBoxTooltips = document.querySelectorAll('.long-box .tooltip');
    longBoxTooltips.forEach(el => {
      const metricText = el.getAttribute('data-metric');
      const imperialText = el.getAttribute('data-imperial');
      el.textContent = isMetric ? metricText : imperialText;
    });

    // Update all small box tooltips based on unit system
    const smallBoxTooltips = document.querySelectorAll('.small-box .tooltip');
    smallBoxTooltips.forEach(el => {
      const metricText = el.getAttribute('data-metric');
      const imperialText = el.getAttribute('data-imperial');
      el.textContent = isMetric ? metricText : imperialText;
    });
  }

