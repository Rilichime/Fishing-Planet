  ];

  // Generate inventory for 7 boxes individually
  function generateInventory() {
    const container = document.querySelector('.inventory-container');

    inventoryData.forEach(data => {
      const inventory = createInventoryBox(data);
      container.appendChild(inventory);
    });
  }

  function createInventoryBox(data) {
    const inventory = document.createElement('div');
    inventory.classList.add('inventory');

    const longBox = createLongBox(data);
    const smallBoxContainer = createSmallBoxContainer(data);

    inventory.appendChild(longBox);
    inventory.appendChild(smallBoxContainer);

    return inventory;
  }

  function createLongBox(data) {
    const longBox = document.createElement('div');
    longBox.classList.add('box', 'long-box');
    longBox.innerHTML = `
      <div class="top-left-text">${data.topLeftText}</div>
      <img src="${data.image}" alt="Image">
      <div class="tooltip" data-metric="${data.itemMetric}" data-imperial="${data.itemImperial}">
        ${data.itemMetric}  <!-- Default to metric -->
      </div>
    `;
    return longBox;
  }

  function createSmallBoxContainer(data) {
    const smallBoxContainer = document.createElement('div');
    smallBoxContainer.classList.add('small-box-container');

    data.smallItems.forEach(item => {
      const smallBox = createSmallBox(item);
      smallBoxContainer.appendChild(smallBox);
    });

    return smallBoxContainer;
  }

  function createSmallBox(item) {
    const smallBox = document.createElement('div');
    smallBox.classList.add('box', 'small-box');
    smallBox.innerHTML = `
      <img src="${item.image}" alt="Item">
      <div class="top-left-text">${item.text}</div>
      <div class="bottom-right-text" data-metric="${item.textMetric}" data-imperial="${item.textImperial}">
        ${item.textMetric}  <!-- Default to textMetric -->
      </div>
      <div class="tooltip" data-metric="${item.tooltipMetric}" data-imperial="${item.tooltipImperial}">
        ${item.tooltipMetric}  <!-- Default to tooltipMetric -->
      </div>
    `;
    return smallBox;
  }

  // Initialize inventory
  generateInventory();
</script>

